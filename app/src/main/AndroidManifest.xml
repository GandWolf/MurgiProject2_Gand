<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="murgiproject.www.iesmurgi.org.murgiprojectv2">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MurgiTema">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
        </activity>

        <activity
            android:name=".Contacto"
            android:label="@string/contacto_label"
            > </activity>

        <activity
            android:name=".Matriculacion"
            android:label="@string/matriculacion_label"
            > </activity>

        <activity
            android:name=".MapsActivity"
            android:label="@string/mapa_label"
            > </activity>

        <activity
            android:name=".Historia"
            android:label="@string/historia_label"
            > </activity>

        <activity
            android:name=".Citas"
            android:label="@string/cita_label"
            > </activity>

        <activity
            android:name=".VerCategoriasCursos"
            android:label="@string/cursos_label"
            > </activity>

        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.Design.NoActionBar"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!--
          Api key maps
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".VerCursos"> </activity>
    </application>

</manifest>